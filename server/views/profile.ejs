<!doctype html>
<html>
<head>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/latest/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css"> <!-- load fontawesome -->
    <div class="page-header text-center">
        <h1><span class="fa fa-anchor"></span> Welcome <%= user.username %> !</h1>
        <a href="/game?id=<%= user.username %>" class="btn btn-primary"> Make a new game </a>
        <a href="/logout" class="btn btn-warning btn-sm"><span class="fa fa-sign-out"></span> Logout</a>
    </div>
    <style>
        .joingame   { margin-bottom:10px; }
    </style>
</head>
<body>
<div class="container">
    <div class="joingame">
      <form action="/game/join" method="post">
        <div class="form-group">
          <input type="text" class="form-control" placeholder="Put your friend's ID code here" name="gameId">
        </div>
        <button type="submit" class="btn btn-primary"><span class="fa fa-handshake-o"></span> Join Game ID</button>
      </form>
    </div>

    <div class="row">

        <!-- LOCAL INFORMATION -->
        <div class="col-sm-6">
            <div class="well">
                <h3><span class="fa fa-user"></span> Your Profile</h3>

                <% if (user) { %>
                <p>
                    <% if (!user.img_url) { %>
                      <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTdeCBydLKH1OtzaPNFRiqTlwaAEjHruFxxVzsshdqFlQe0_7R8"><br>
                    <% } else { %>
                      <img src="<%= user.img_url %>" alt="profile picture"><br>
                    <% } %>

                    <strong>name</strong>: <%= user.first_name %> <%= user.last_name %><br>
                    <strong>total games</strong>: <%= user.total_games %><br>
                    <strong>win/loss</strong>: <%= user.win %> / <%= user.loss %><br>
                    <strong>email</strong>: <%= user.email %>
                </p>

                <a href="/unlink/local" class="btn btn-default">Update profile</a>
                <% } else { %>
                <a href="/auth/facebook" class="btn btn-primary">Connect to Facebook</a>
                <a href="/auth/google" class="btn btn-danger">Connect to Google+   </a>
                <% } %>

            </div>
        </div>

<% include foot.ejs%>
